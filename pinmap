using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using static System.Net.Mime.MediaTypeNames;
using static System.Runtime.CompilerServices.RuntimeHelpers;

public class PinMap : MonoBehaviour
{
    // El tag del jugador
    public string playerTag = "Player";

    // El rango de interacci贸n
    public float interactRange = 100f;

    // El evento de colisi贸n
    private void OnTriggerEnter(Collider other)
    {
        // Si el que entr贸 al trigger es el jugador
        if (other.gameObject.tag == playerTag)
        {
            OnKeyDown(KeyCode.F);
        }
    }

    public void OnKeyDown(KeyCode key)
    {
        // Si la tecla presionada es F
        if (key == KeyCode.F)
        {
            // Realiza la depuraci贸n
            Application.OpenURL("https://maps.app.goo.gl/uemqRNFHuireD3G67");
        }
    }
}
